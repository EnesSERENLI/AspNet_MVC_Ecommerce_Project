@model List<Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Suppliers
            </header>
            <div class="alert-error text-success">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> CompanyName</th>
                        <th class="hidden-phone"><i class="icon-star-empty"></i> Email</th>
                        <th><i class="icon-phone"></i>PhoneNumber</th>
                        <th class="hidden-phone"><i class="icon-star-empty"></i> Address</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th>@Html.ActionLink("Add Supplier", "AddSupplier", "Supplier", new { @class = "btn btn-primary btn-sm" })</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td><a href="#">@supplier.CompanyName</a></td>
                            <td class="hidden-phone">@supplier.Email</td>
                            <td class="hidden-phone">@supplier.PhoneNumber</td>
                            <td class="hidden-phone">@supplier.Address</td>
                            <td>
                                @if (supplier.Status == Core.Enums.Status.Active)
                                {
                                    <span class="label label-success label-mini">@supplier.Status</span>
                                }
                                else if (supplier.Status == Core.Enums.Status.Deleted)
                                {
                                    <span class="label label-danger label-mini">@supplier.Status</span>
                                }
                                else if (supplier.Status == Core.Enums.Status.Updated)
                                {
                                    <span class="label label-warning label-mini">@supplier.Status</span>
                                }

                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "UpdateSupplier", "Supplier", new { supplier.ID }, new { @class = "btn btn-primary btn-xs icon-pencil" })
                                @Html.ActionLink("Sil", "DeleteSupplier", "Supplier", new { supplier.ID }, new { @class = "btn btn-warning btn-xs icon-trash" })
                                @Html.ActionLink("Kalıcı Sil", "DeleteForceSupplier", "Supplier", new { supplier.ID }, new { @class = "btn btn-danger btn-xs icon-trash" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

