@model Supplier
@{
    ViewBag.Title = "AddSupplier";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Add Supplier
        </header>
        <div class="panel-body">
            <div class="alert-error">
                @if (TempData["message"] != null)
                {
                    <span class="text-danger">
                        @TempData["message"]
                    </span>
                }
            </div>
            <form method="post" role="form">
                <div class="form-group">
                    <label for="exampleInputEmail1">CompanyName</label>
                    @*<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">*@
                    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control round-input" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control round-input", @type = "email" })
                    @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">PhoneNumber</label>
                    @*<input type="text" placeholder="" data-mask="(999) 999-9999" class="form-control">*@
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control round-input" })
                    @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Address</label>
                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control round-input" })
                    @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                </div>
                <button type="submit" class="btn btn-info">Submit</button>
            </form>

        </div>
    </section>
</div>

