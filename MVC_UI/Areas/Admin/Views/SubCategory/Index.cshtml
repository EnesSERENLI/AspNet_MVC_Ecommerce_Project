@model List<SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                SubCategories
            </header>
            <div class="alert-error text-success">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Success!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> SubCategoryName</th>
                        <th class="hidden-phone"><i class="icon-star-empty"></i> CategoryName</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th>@Html.ActionLink("Add SubCategory", "AddSubCategory", "SubCategory", new { @class = "btn btn-primary btn-sm" })</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subCategory in Model)
                    {
                        <tr>
                            <td><a href="#">@subCategory.SubCategoryName</a></td>
                            <td class="hidden-phone">@subCategory.Category.CategoryName</td>
                            <td>
                                @if (subCategory.Status == Core.Enums.Status.Active)
                                {
                                    <span class="label label-success label-mini">@subCategory.Status</span>
                                }
                                else if (subCategory.Status == Core.Enums.Status.Deleted)
                                {
                                    <span class="label label-danger label-mini">@subCategory.Status</span>
                                }
                                else if (subCategory.Status == Core.Enums.Status.Updated)
                                {
                                    <span class="label label-warning label-mini">@subCategory.Status</span>
                                }

                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "UpdateSubCategory", "SubCategory", new { subCategory.ID }, new { @class = "btn btn-primary btn-xs icon-pencil" })
                                @Html.ActionLink("Sil", "DeleteSubCategory", "SubCategory", new { subCategory.ID }, new { @class = "btn btn-warning btn-xs icon-trash" })
                                @Html.ActionLink("Kalıcı Sil", "DeleteForceSubCategory", "SubCategory", new { subCategory.ID }, new { @class = "btn btn-danger btn-xs icon-trash" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

